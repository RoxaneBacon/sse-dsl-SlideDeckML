{
  "name": "slidedeckml",
  "version": "1.0.0",
  "description": "A DSL for creating reveal.js slides from simplified markdown using Langium",
  "main": "./out/extension.js",
  "bin": {
    "slidedeckml": "./out/cli/main.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "langium:generate": "langium generate",
    "langium:watch": "langium generate --watch",
    "compile": "node ./out/cli/main.js"
  },
  "keywords": [
    "langium",
    "dsl",
    "markdown",
    "reveal.js",
    "slides"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chevrotain": "^10.4.1",
    "commander": "^8.0.0",
    "langium": "~1.0.0",
    "vscode-languageclient": "^8.0.2",
    "vscode-languageserver": "^8.0.2",
    "vscode-uri": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "^14.17.3",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "langium-cli": "~1.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
